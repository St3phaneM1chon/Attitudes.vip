# =====================================================
# ATTITUDES.VIP - ENVIRONMENT VARIABLES EXAMPLE
# =====================================================
# Copy this file to .env and replace with your values
# =====================================================

# NODE ENVIRONMENT
NODE_ENV=development
PORT=3000
API_VERSION=v1

# DATABASE - PostgreSQL (Supabase)
DATABASE_URL=postgresql://postgres:password@localhost:5432/attitudes_vip
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# REDIS CACHE
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# SUPABASE
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# JWT & AUTHENTICATION
JWT_SECRET=change-this-super-secret-jwt-key-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=change-this-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# OAUTH PROVIDERS
# Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Twitter
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
TWITTER_CALLBACK_URL=http://localhost:3000/auth/twitter/callback

# Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_LOCATION=./certs/apple-private-key.p8
APPLE_CALLBACK_URL=http://localhost:3000/auth/apple/callback

# PAYMENT SERVICES
# Stripe
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=USD

# COMMUNICATION SERVICES
# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@attitudes.vip
SENDGRID_FROM_NAME=Attitudes.vip

# MEDIA & STORAGE
# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CALENDAR SERVICES
# Google Calendar
GOOGLE_CALENDAR_CLIENT_ID=your_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_calendar_secret
GOOGLE_CALENDAR_REFRESH_TOKEN=your_calendar_refresh_token

# WEBSOCKET
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io

# RATE LIMITING
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# SESSION
SESSION_SECRET=change-this-session-secret
SESSION_NAME=attitudes_session
SESSION_MAX_AGE=86400000

# LOGGING
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_DIR=./logs

# APPLICATION URLS
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api
ADMIN_URL=http://localhost:3000/admin

# MULTI-TENANT
TENANT_ISOLATION=strict
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,fr,es,de,it,pt,ar,zh,ja,hi

# SECURITY
HELMET_CSP=true
HTTPS_ONLY=false
SECURE_COOKIES=false

# FEATURE FLAGS
FEATURE_WEBSOCKET=true
FEATURE_NOTIFICATIONS=true
FEATURE_PAYMENTS=true
FEATURE_AI_SUGGESTIONS=false
FEATURE_VIDEO_MONTAGE=false

# MCP SERVICES TRACKING
MCP_FILESYSTEM_ENABLED=true
MCP_POSTGRES_ENABLED=true
MCP_REDIS_ENABLED=true
MCP_GIT_ENABLED=true
MCP_STRIPE_ENABLED=false
MCP_TWILIO_ENABLED=false
MCP_SENDGRID_ENABLED=false
MCP_CLOUDINARY_ENABLED=false
MCP_GOOGLE_CALENDAR_ENABLED=false

# TASKMASTER INTEGRATION
TASKMASTER_ENABLED=true
TASKMASTER_API_URL=http://localhost:4000
TASKMASTER_API_KEY=your-taskmaster-key
TASKMASTER_WEBHOOK_SECRET=your-webhook-secret